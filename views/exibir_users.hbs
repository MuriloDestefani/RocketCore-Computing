<div class="container-fluid text-center my-5 ex-user">
    <i class="bi bi-person-lines-fill icon-top"></i>
    <h1 class="mb-3 titulo">Listar Usuários</h1>
    {{#if table}}
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead class="table-dark">
                <tr class="align-middle">
                    <th scope="col"><i class="bi bi-list-ol"></i> ID</th>
                    <th scope="col"><i class="bi bi-person-vcard-fill"></i> Nome</th>
                    <th scope="col"><i class="bi bi-envelope-at-fill"></i> Email</th>
                    <th scope="col"><i class="bi bi-database-fill"></i> Ações</th>
                </tr>
            </thead>
            <tbody>
                {{#each usuarios}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{nome}}</td>
                    <td>{{email}}</td>
                    <td>
                        <div class="row g-1 d-flex justify-content-center align-items-center">
                            <div class="w-100">
                                <form action="/editar_users" method="post">
                                    <input type="hidden" name="id"  value="{{id}}">
                                    <button class="btn botao-hero w-100"><i class="bi bi-pencil-fill me-1"></i>Editar</button>
                                </form>
                            </div>
                            <div class="w-100">
                                    <form action="/excluir_users" method="post">
                                    <input type="hidden" name="id"  value="{{id}}">
                                    <button class="btn botao w-100"><i class="bi bi-trash3-fill me-1"></i>Excluir</button>
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{else}}
    <div class="card mt-4">
        <div class="card-body">
            Nenhum usuário encontrado!
        </div>
    </div>
    {{/if}}
</div>