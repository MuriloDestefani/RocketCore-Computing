{{#unless error}}
<div class="container-fluid text-center">
    <div class="row align-items-center">
        <div class="col container-fluid my-5">
            <form action="/update_user" method="post">
                <i class="bi bi-person-fill-gear icon-top"></i>
                <h1 class="mb-3 titulo">Alterar Usu√°rio</h1>
                <div class="form-floating mb-3 mx-auto col-xl-8">
                    <input type="hidden" value="{{id}}" name="id">
                    <input value="{{nome}}" type="text" class="form-control" id="nome" name="nome" placeholder="Digite seu nome">
                    <label for="nome" class="form-label">Nome Completo</label>
                </div>
                <div class="form-floating mb-3 mx-auto col-xl-8">
                    <input value="{{email}} "type="email" class="form-control" id="email" name="email" placeholder="Email">
                    <label for="email" class="form-label">Email</label>
                </div>
                <div class="mb-3 mx-auto col-xl-8">
                    <label for="exampleInputPassword1" class="form-label"><i class="bi bi-key-fill"></i> Senha</label>
                    <input type="password" id="senha" name="senha" value="{{senha}}" class="form-control" aria-describedby="passwordHelpBlock" required>
                </div>
                <button type="submit" class="btn btn-lg botao-hero mx-auto"><a href="#">Alterar <i class="bi bi-arrow-counterclockwise"></i></a></button>
            </form>
            {{else}}
            <div class="card bg-danger p-4 mt-5 text-white">
                <div class="card-body fw-bold text-center">
                    Houve um problema: {{problema}}
                </div>
            </div>
            {{/unless}}
        </div>
        <div class="col img-alt d-none d-xl-block d-xxl-none"></div>
    </div>
</div>